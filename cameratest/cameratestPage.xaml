<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:cameratest" x:Class="cameratest.cameratestPage">
	<ContentPage.Content>
		<StackLayout VerticalOptions="CenterAndExpand">
			<Label Text="Camera test" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" />
			<Button Text="Add photo" Command="{Binding CameraCommand}" IsEnabled="{Binding CanTakeNewPhoto}" />
			<Button Text="Pick photo" Command="{Binding PickCommand}" IsEnabled="{Binding CanTakeNewPhoto}" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
